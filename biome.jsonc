{
  "$schema": ".\\node_modules\\@biomejs\\biome\\configuration_schema.json",
  "root": true,
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "experimentalScannerIgnores": [".turbo", "node_modules"]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedProperties": "on"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100,
    "lineEnding": "lf",
    "useEditorconfig": true
  },
  "linter": {
    "includes": ["**", "!.turbo/**", "!**/node_modules/**", "!apps/**/.next/**"],
    "domains": {
      "next": "all",
      "react": "all",
      "project": "recommended"
    },
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "complexity": {
        "noArguments": "error",
        "noCommaOperator": "error",
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 16
          }
        },
        "noExcessiveNestedTestSuites": "error",
        "noForEach": "error",
        "noUselessEscapeInRegex": "error",
        "noUselessStringConcat": "info",
        "noUselessStringRaw": "error",
        "noUselessUndefinedInitialization": "error",
        "useDateNow": "error",
        "useSimplifiedLogicExpression": {
          "level": "error",
          "fix": "none"
        },
        "useNumericLiterals": "error",
        "useWhile": "error"
      },
      "correctness": {
        "noUndeclaredDependencies": "error",
        "noUndeclaredVariables": "error",
        "noUnusedImports": "warn",
        "noUnusedPrivateClassMembers": "error",
        "noUnusedVariables": "warn",
        "noInvalidBuiltinInstantiation": "error",
        "noMissingVarFunction": "error",
        "noUnknownPseudoClass": "error",
        "noUnknownPseudoElement": "error",
        "noUnknownTypeSelector": "error",
        "noSwitchDeclarations": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "info",
          "fix": "safe",
          "options": {
            "functions": ["cn", "clsx", "cva"]
          }
        }
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noBarrelFile": "error",
        "noDelete": "error",
        "noReExportAll": "warn",
        "useTopLevelRegex": "error",
        "noDynamicNamespaceImportAccess": "error",
        "noImgElement": "warn",
        "noNamespaceImport": "error"
      },
      "style": {
        "noDefaultExport": "error",
        "noDoneCallback": "error",
        "noInferrableTypes": "warn",
        "noNamespace": "error",
        "noNegationElse": "warn",
        "noNonNullAssertion": "error",
        "noParameterAssign": "error",
        "noRestrictedGlobals": {
          "level": "error",
          "options": {
            "deniedGlobals": {
              "alert": "alert is not allowed, please use a custom dialog component instead.",
              "confirm": "confirm is not allowed, please use a custom dialog component instead.",
              "prompt": "prompt is not allowed, please use a custom dialog component instead.",
              "React": "React is not allowed.",
              "ReactDOM": "ReactDOM is not allowed."
            }
          }
        },
        "noShoutyConstants": "warn",
        "noUnusedTemplateLiteral": "error",
        "noUselessElse": "error",
        "noYodaExpression": "error",
        "useAsConstAssertion": "info",
        "useBlockStatements": "error",
        "useCollapsedElseIf": "error",
        "useConsistentArrayType": "warn",
        "useConsistentBuiltinInstantiation": "error",
        "useConst": "info",
        "useDefaultParameterLast": "error",
        "useDefaultSwitchClause": "warn",
        "useExplicitLengthCheck": "error",
        "useExponentiationOperator": "info",
        "useExportType": "error",
        "useFilenamingConvention": "error",
        "useForOf": "error",
        "useFragmentSyntax": "info",
        "useImportType": "error",
        "useNamingConvention": {
          "level": "error",
          "options": {
            "strictCase": false
          }
        },
        "useNodeAssertStrict": "error",
        "useNodejsImportProtocol": "error",
        "useNumberNamespace": "error",
        "useSelfClosingElements": "info",
        "useShorthandAssign": "error",
        "useShorthandFunctionType": "error",
        "useSingleVarDeclarator": "warn",
        "useThrowNewError": "error",
        "useThrowOnlyError": "error",
        "useEnumInitializers": "error",
        "useArrayLiterals": "error",
        "noCommonJs": "error",
        "noDescendingSpecificity": "warn",
        "noEnum": "error",
        "noNestedTernary": "warn",
        "noSubstr": "error",
        "noValueAtRule": "error",
        "useAtIndex": "info",
        "useCollapsedIf": "error",
        "useConsistentCurlyBraces": "error",
        "useConsistentMemberAccessibility": {
          "level": "error",
          "options": {
            "accessibility": "explicit"
          }
        },
        "useTrimStartEnd": "error"
      },
      "suspicious": {
        "noEmptyBlockStatements": "error",
        "noEvolvingTypes": "error",
        "noMisplacedAssertion": "error",
        "useAwait": "error",
        "useErrorMessage": "error",
        "useNumberToFixedDigitsArgument": "error",
        "noDocumentCookie": "error",
        "noDuplicateCustomProperties": "error",
        "noDuplicateElseIf": "error",
        "noDuplicateProperties": "error",
        "noIrregularWhitespace": "error",
        "noOctalEscape": "error",
        "noTemplateCurlyInString": "error",
        "useAdjacentOverloadSignatures": "error",
        "useGuardForIn": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "info"
      }
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    },
    "linter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "includes": ["**/.vscode/**"],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    },
    {
      "includes": ["**/.env*", "!**/.env"],
      "linter": {
        "rules": {
          "nursery": {
            "noSecrets": "error"
          }
        }
      }
    },
    {
      "includes": [
        "scripts/**/*.js",
        "scripts/**/*.mjs"
      ],
      "javascript": {
        "globals": ["Bun"]
      }
    },
    {
      "includes": [
        "**/apps/**/app/**/layout.tsx",
        "**/apps/**/app/**/loading.tsx",
        "**/apps/**/app/**/page.tsx",
        "**/apps/**/app/**/opengraph-image.tsx",
        "**/apps/**/app/**/error.tsx",
        "**/apps/**/app/**/not-found.tsx",
        "**/apps/**/app/sitemap.ts",
        "**/apps/**/app/robots.ts",
        "**/apps/**/app/global-error.tsx",
        "**/apps/**/next.config.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": ["**/apps/www/types/**/*.ts"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off",
            "noNamespace": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/packages/krds-ui-components/components/**/*.ts",
        "**/packages/krds-ui-components/components/**/*.tsx"
      ],
      "linter": {
        "rules": {
          "nursery": {},
          "style": {
            "useComponentExportOnlyModules": "info"
          }
        }
      }
    },
    {
      "includes": [
        "**/packages/krds-ui/components/**/*.stories.ts",
        "**/packages/krds-ui/components/**/*.stories.tsx"
      ],
      "linter": {
        "rules": {
          "a11y": {
            "useValidAnchor": "off"
          },
          "style": {
            "noDefaultExport": "off",
            "useComponentExportOnlyModules": "off"
          },
          "nursery": {}
        }
      }
    },
    {
      "includes": [
        "**/packages/krds-ui-components/components/**/*.variants.ts",
        "**/packages/krds-ui-components/components/**/*.variants.tsx"
      ],
      "linter": {
        "rules": {
          "complexity": {
            // TODO
            "useLiteralKeys": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/packages/krds-ui-components/icons/**/*.ts",
        "**/packages/krds-ui-components/icons/**/*.tsx"
      ],
      "linter": {
        "rules": {
          "a11y": {
            "noSvgWithoutTitle": "off"
          }
        }
      }
    },
    {
      "includes": ["**/packages/krds-ui/styles/theme.css"],
      "linter": {
        "rules": {
          "nursery": {},
          "suspicious": {
            "noDuplicateCustomProperties": "off"
          },
          "correctness": {
            "noUnknownPseudoClass": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/lib/env.ts",
        "**/lib/queries/**/*",
        "**/lib/ngt*",
        "**/auth.constants.ts",
        "**/tailwind.config.ts",
        "**/next.config.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": ["**/middleware.ts", "**/lib/utils.ts"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          }
        }
      }
    }
  ]
}
